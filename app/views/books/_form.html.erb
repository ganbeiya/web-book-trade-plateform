
<%= form_with model: book, html: { multipart: true, class: "book-form" } do |form| %>
  <div class="form-grid">
    <%# Title %>
    <div class="form-group">
      <%= form.label :title, class: "form-label" %>
      <%= form.text_field :title, class: "form-input" %>
    </div>

    <%# Author %>
    <div class="form-group">
      <%= form.label :author, class: "form-label" %>
      <%= form.text_field :author, class: "form-input" %>
    </div>

    <%# Price %>
    <div class="form-group">
      <%= form.label :price, class: "form-label" %>
      <%= form.number_field :price, step: 0.01, class: "form-input" %>
    </div>

    <%# Condition %>
    <div class="form-group">
      <%= form.label :condition, class: "form-label" %>
      <%= form.select :condition,
            options_for_select(["New","Like New","Good","Acceptable"], book.condition), { prompt: "Select condition" }, class: "form-input" %>
    </div>

    <div>
      <%= form.label :condition %>
      <%= form.select :condition, options_for_select(["New", "Like New", "Good", "Acceptable"], book.condition), prompt: "Select condition" %>
    </div>

    <%# ISBN %>
    <div class="form-group">
      <%= form.label :isbn, class: "form-label" %>
      <%= form.text_field :isbn, class: "form-input" %>
    </div>

    <%# Category %>
    <div class="form-group">
      <%= form.label :category_id, "Category", class: "form-label" %>
        <%= form.collection_select :category_id, Category.order(:name), :id, :name, { prompt: "Select category" }, class: "form-input" %>
    </div>

    <%# Image file upload field %>
    <div class="form-group full-width">
      <%= form.label :image, class: "form-label" %>
      <%= form.file_field :image, class: "form-input" %>
    </div>
  </div>

  <div class="form-actions">
    <%= form.submit "Create Book", class: "btn-primary" %>
    <%= link_to "Cancel", books_path, class: "btn-secondary" %>
  </div>
<% end %>
