<%# Partial: Book card display for sent/received requests %>

<div class="col">
  <div class="card shadow h-100" style="min-height: 300px;">
    <div class="row g-0 align-items-center" style="min-height: 300px;">

      <%# Book cover image %>
      <div class="col-md-3 d-flex align-items-center justify-content-center p-2" style="min-width: 160px;">
        <div style="width: 120px; height: 180px; display: flex; align-items: center; justify-content: center;">
          <% if book.present? && book.respond_to?(:image) && book.image.attached? %>
            <%= image_tag book.image, style: "max-height: 100%; max-width: 100%; object-fit: contain;" %>
          <% else %>
            <%= image_tag "default_book_cover.jpg", style: "max-height: 100%; max-width: 100%; object-fit: contain;" %>
          <% end %>
        </div>
      </div>

      <%# Book and transaction details %>
      <div class="col-md-9" style="min-height: 220px; display: flex; flex-direction: column; justify-content: center;">
        <div class="card-body p-2">

          <%# Book info section %>
          <div style="min-height: 130px; display: flex; flex-direction: column; justify-content: center;">
            <% if book.present? %>
              <h5 class="card-title mb-1">
                <%= link_to book.title, book_path(book), class: "text-decoration-none" %>
              </h5>
              <p class="mb-1 text-muted">
                <strong>Author:</strong> <%= book.author %>
                <% if book.isbn.present? %> | <strong>ISBN:</strong> <%= book.isbn %><% end %>
              </p>
              <p class="mb-1">
                <span class="badge bg-info text-dark">Price: $<%= book.price %></span>
                <span class="badge bg-secondary">Condition: <%= book.condition %></span>
                <% if book.category.present? %>
                  <span class="badge bg-light text-dark"><%= book.category %></span>
                <% end %>
              </p>
            <% else %>
              <h5 class="text-muted fst-italic">Book deleted</h5>
            <% end %>
          </div>

          <hr class="my-2">

          <% if mode == "received" %>
            <%# Show multiple transactions grouped by book %>
            <div class="requests-container" id="requests-for-<%= book.id %>" style="max-height: 180px; overflow: hidden; transition: max-height 0.3s ease;">
              <% transactions.each do |t| %>
                <%= render partial: "transactions/request_row", locals: { t: t, role: "seller" } %>
              <% end %>
            </div>
            <% if transactions.size > 2 %>
              <div class="d-flex justify-content-end pe-3 mt-2">
                <button class="btn btn-link btn-sm p-0" onclick="toggleRequests(<%= book.id %>)" id="toggle-btn-<%= book.id %>">
                  Show more
                </button>
              </div>
            <% end %>
          <% else %>
            <%# Sent request (one transaction per card) %>
            <%= render partial: "transactions/request_row", locals: { t: transaction, role: "buyer" } %>
          <% end %>

        </div>
      </div>
    </div>
  </div>
</div>

<%# JavaScript to toggle show more %>
<% if mode == "received" %>
  <script>
    function toggleRequests(bookId) {
      const container = document.getElementById(`requests-for-${bookId}`);
      const btn = document.getElementById(`toggle-btn-${bookId}`);
      if (container.style.maxHeight === "none") {
        container.style.maxHeight = "180px";
        btn.innerText = "Show more";
      } else {
        container.style.maxHeight = "none";
        btn.innerText = "Show less";
      }
    }
  </script>
<% end %>
