<div class="container" style="max-width: 1200px;">
  <h1 class="mb-4">Received Requests</h1>
</div>

<% if @transactions.blank? %>
  <div class="alert alert-info text-center">
    You have no pending requests.
  </div>
<% else %>
  <div class="container" style="max-width: 1200px;">
    <div class="row row-cols-1 g-4">
      <% @transactions.each do |book, transactions| %>
        <%= render partial: "transactions/book_card", locals: { book: book, transactions: transactions, mode: "received" } %>
      <% end %>
    </div>
  </div>
<% end %>
