<div class="container py-5">
  <h1>Edit Profile</h1>

  <%= form_for current_user, url: account_path, method: :patch, html: { class: "needs-validation", novalidate: true } do |f| %>
    <div class="mb-3">
      <%= f.label :email, "email" %>
      <%= f.email_field :email, class: "form-control", required: true %>
    </div>

    <div class="mb-3">
      <%= f.label :username, "user name" %>
      <%= f.text_field :username, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :introduction, "introduction" %>
      <%= f.text_area :introduction, class: "form-control" %>
    </div>

    <div class="d-flex gap-2">
      <%= f.submit "save introduction", class: "btn btn-primary" %>
      <%= link_to "back", account_path, class: "btn btn-secondary" %>
    </div>
  <% end %>
</div>
