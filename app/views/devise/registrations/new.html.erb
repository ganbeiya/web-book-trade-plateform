<% form_block = capture do %>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { novalidate: true }) do |f| %>

    <%# Username %>
    <div class="mb-3">
      <%= f.label :username, class: "form-label" %>
      <%= f.text_field :username, class: "form-control #{'is-invalid' if resource.errors[:username].any?}" %>
      <small class="form-text text-muted">6â€“15 characters.</small>
      <% if resource.errors[:username].any? %>
        <div class="invalid-feedback d-block"><%= resource.errors[:username].first %></div>
      <% end %>
    </div>

    <%# Email %>
    <div class="mb-3">
      <%= f.label :email, class: "form-label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control #{'is-invalid' if resource.errors[:email].any?}" %>
      <small class="form-text text-muted">Must be a valid email address.</small>
      <% if resource.errors[:email].any? %>
        <div class="invalid-feedback d-block"><%= resource.errors[:email].first %></div>
      <% end %>
    </div>

    <%# Password %>
    <div class="mb-3">
      <%= f.label :password, class: "form-label" %>
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control #{'is-invalid' if resource.errors[:password].any?}" %>
      <small class="form-text text-muted">Minimum 6 characters.</small>
      <% if resource.errors[:password].any? %>
        <div class="invalid-feedback d-block"><%= resource.errors[:password].first %></div>
      <% end %>
    </div>

    <%# Password confirmation %>
    <div class="mb-3">
      <%= f.label :password_confirmation, class: "form-label" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control #{'is-invalid' if resource.errors[:password_confirmation].any?}" %>
      <% if resource.errors[:password_confirmation].any? %>
        <div class="invalid-feedback d-block"><%= resource.errors[:password_confirmation].first %></div>
      <% end %>
    </div>

    <%# Introduction (optional) %>
    <div class="mb-3">
      <%= f.label :introduction, class: "form-label" %>
      <%= f.text_area :introduction, rows: 3, class: "form-control #{'is-invalid' if resource.errors[:introduction].any?}" %>
      <% if resource.errors[:introduction].any? %>
        <div class="invalid-feedback d-block"><%= resource.errors[:introduction].first %></div>
      <% end %>
    </div>

    <%= f.submit "Sign up", class: "btn btn-primary w-100" %>
  <% end %>
<% end %>

<%= render partial: "devise/shared/auth_wrapper", locals: {
  title: "Sign Up",
  form_content: form_block,
  links: link_to("Log in", new_user_session_path)
} %>
